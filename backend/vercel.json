{
    "version": 2,
    "builds": [
      {
        "src": "./index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
        {
          "src": "/api/user/(.*)", 
          "dest": "/api/user/$1" 
        },
        {
          "src": "/api/transactions/(.*)", 
          "dest": "/api/transactions/$1" 
        },
        {
          "src": "/api/truck/(.*)",
          "dest": "/api/truck/$1" 
        },
        {
          "src": "/api/shop/(.*)", 
          "dest": "/api/shop/$1" 
        }
      ]
}
